<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:views="clr-namespace:Kakaotalk.UI.Views"
                    xmlns:units="clr-namespace:Kakaotalk.UI.Units">
    <Style TargetType="{x:Type views:MainWindow}">
        <Setter Property="Background"  Value="White"/>
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="{x:Type views:MainWindow}">
                    <Border BorderThickness="{TemplateBinding BorderThickness}"
                            BorderBrush="{TemplateBinding BorderBrush}"
                            Background="{TemplateBinding Background}">
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="70"/>
                                <RowDefinition Height="*"/>
                                <RowDefinition Height="94"/>
                            </Grid.RowDefinitions>
                            <units:Header />
                            <Grid Grid.Row="1" Background="#B2C7D9"/>
                            <Grid Grid.Row="2" Height="94" />
                        </Grid>
                    </Border>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>
</ResourceDictionary>