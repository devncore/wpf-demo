<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:units="clr-namespace:Kakaotalk.UI.Units">
    <Style TargetType="{x:Type units:SendButton}">
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="{x:Type units:SendButton}">
                    <Border Background="#FFEC42" 
                            BorderBrush="#BDB03A"
                            BorderThickness="0.5"
                            Height="23" Width="40"
                            CornerRadius="1"
                            Cursor="Hand"
                            >
                        <TextBlock Text="전송" 
                                   HorizontalAlignment="Center" VerticalAlignment="Center"
                                   Foreground="#BDB03A"
                                   FontSize="11.5"
                                   />
                    </Border>
      
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>
</ResourceDictionary>